#include <iostream>
#include <fstream>
#include <string>
#include <iomanip>
using namespace std;

struct STUDENT
{
	string name;
	int age;
	float gpa;

};
STUDENT a[9];
//save data from text into array
void DataHolder(string&, int&, float&)
{
	int ArraySize;
	//open a file and take in data
	fstream file;
	file.open("text.txt", ios::in);
	file>>ArraySize;
	STUDENT *p=new STUDENT[ArraySize]; 
	for (int i=0; i<ArraySize; ++i)
	{

		//file>>p[i].name>>p[i].age>>p[i].gpa;
	}
	file.close();
}
//display data from text
void Display(string, int, float)
{
	//now display contents of file
	for (int i=0; i<9; ++i)
	{
		cout<<a[i].name<<" "<<a[i].age<<" "<<a[i].gpa<<endl;
	}

}

void readDataFromFile(STUDENT *&p, int ArraySize, fstream &file)
{
	for (int i=0; i<ArraySize; ++i)
	{
		file>>p[i].name>>p[i].age>>p[i].gpa;
	}
	file.close();
}

void outputData(STUDENT *&p, int ArraySize)
{
	for (int i=0; i<ArraySize; ++i)
	{
		cout<<p[i].name<<" "<<p[i].age<<" "<<p[i].gpa<<endl;
	}
}

int main ()
{
	int ArraySize;
	//open a file and take in data
	fstream file;
	file.open("text.txt", ios::in);
	file>>ArraySize;
	STUDENT *p=new STUDENT[ArraySize]; 
	readDataFromFile(p, ArraySize, file);
	outputData(p, ArraySize);
	system("pause");
	return 0;
}
