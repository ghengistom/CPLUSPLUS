#include <iostream>
#include <string>
#include <cstring>
using namespace std;

template <class UserInput>
void Input(UserInput& name)
{
	//char name[30];
	cout<<"Enter your full name: ";
	cin.getline(name, 30, '\n');
}
template <class UserOutput>
void Output(UserOutput name)
{
	int a;
	a=strlen(name);
	cout<<a;
}

int main()
{
	char name[30];
	Input(name);
	Output(name);
	system ("pause");
	return 0;
}
